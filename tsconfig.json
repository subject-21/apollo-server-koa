{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}